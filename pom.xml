        </repository>
        <repository>
            <id>bstats-repo</id>
            <!-- http://repo.bstats.org/content/repositories/releases/org/bstats/bstats-bukkit/ -->
            <url>http://repo.bstats.org/content/repositories/releases/</url>
        </repository>
    </repositories>
</project>